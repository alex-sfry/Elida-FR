- let i = 0;

.c-dropdown.dropdown-container.d-input.bg-transparent
    input(type='hidden')
    .dropdown.bg-transparent
        input.dropdown-toggle.w-100.p-1.border.rounded-2.border-dark.shadow-none.bg-transparent.fw-normal(
            type='text' class=sysSearchDropdown
            id=sysSearchDropdown
            name=inputSysSearchDropdownName
            data-bs-toggle='dropdown'
            data-bs-auto-close='true'
            aria-expanded='false'
            placeholder='Search systems'
        )
        ul.dropdown-menu.px-1.w-100.me-2.shadow-sm
            while i < 10
                li.dropdown-item.fw-normal= i++