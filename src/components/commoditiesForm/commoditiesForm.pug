- const landingPadSize = 'landingPadSize';
- const includeSurface = 'includeSurface';
- const sysSearchDropdown = 'sys-search';
- const inputSysSearchDropdownName = 'system';
- const commoditiesSelectInput = 'dd-search-commodities';
- const commoditiesSelected = 'selected-items-commodities';
- const inputCommoditiesName = 'commodities';
- const sortBy = 'sortBy';
- const distanceFromStar = 'distanceFromStar';
- const minSupply = 'minSupply';
- const minDemand = 'minDemand';
- const maxDistanceFromRefStar = 'maxDistanceFromRefStar';


form.c-form.py-2.px-4.rounded-2.w-100.d-flex.flex-column.mt-4(action='' method='POST' id='c-form' )
    h1.mt-1.mb-4.text-center.fs-2.fw-normal Search for commodities
    .container-xl
        .h-100.d-flex.flex-column.justify-content-between.fs-6
            .d-flex.flex-column
                .row.gap-3
                    .col
                        div
                            label.fw-bold(for='c-hiddenSelect') Commodities:
                            include ../customSelect/customSelect.pug
                    .col.d-flex.gap-2.flex-column.justify-content-between
                        div
                            label.fw-bold(for=sysSearchDropdown) Reference system:
                            include ../inputDropdown/inputDropdown.pug
                        div
                            label.fw-bold(for=landingPadSize) Min. landing pad size:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=landingPadSize name=landingPadSize)
                                option.fw-normal(value='S') S
                                option.fw-normal(value='M') M
                                option.fw-normal(value='L') L
                        div
                            label.fw-bold(for=includeSurface) Include surface:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=includeSurface name=includeSurface)
                                option.fw-normal(value='Yes') Yes
                                option.fw-normal(value='No') No
                        div
                            label.fw-bold(for=sortBy) Sort by:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=sortBy name=sortBy)
                                option.fw-normal(value='Updated at') Updated at (time)
                                option.fw-normal(value='Price') Price
                                option.fw-normal(value='Distance') Distance (LY)
                    .col.d-flex.gap-2.flex-column.justify-content-between
                        div
                            label.fw-bold(for=maxDistanceFromRefStar) Max. distance from ref. system:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=maxDistanceFromRefStar name=maxDistanceFromRefStar)
                                option.fw-normal(value='Any') Any
                                option.fw-normal(value='25') 25 LY
                                option.fw-normal(value='50') 50 LY
                                option.fw-normal(value='100') 100 LY
                                option.fw-normal(value='250') 250 LY
                                option.fw-normal(value='500') 500 LY
                                option.fw-normal(value='1000') 1000 LY
                        div
                            label.fw-bold(for=distanceFromStar) Max. distance from the star:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=distanceFromStar name=distanceFromStar)
                                option.fw-normal(value='Any') Any
                                option.fw-normal(value='100') 100 ls
                                option.fw-normal(value='500') 500 ls
                                option.fw-normal(value='1000') 1000 ls
                                option.fw-normal(value='2000') 2000 ls
                                option.fw-normal(value='5000') 5000 ls
                                option.fw-normal(value='10000') 10000 ls
                        div
                            label.fw-bold(for=minSupply) Min. supply / demand:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=minSupply name=minSupply)
                                option.fw-normal(value='Any') Any
                                option.fw-normal(value='100') 100
                                option.fw-normal(value='500') 500
                                option.fw-normal(value='1000') 1000
                                option.fw-normal(value='2000') 2000
                                option.fw-normal(value='5000') 5000
                                option.fw-normal(value='10000') 10000
                        div
                            label.fw-bold(for=minDemand) Max. age of data:
                            select.form-select.form-select-sm.shadow-none.border-dark.fs-6.fw-normal(id=minDemand name=minDemand)
                                option.fw-normal(value='Any') Any
                                option.fw-normal(value='1 hour') 1 hour
                                option.fw-normal(value='10 hours') 10 hours
                                option.fw-normal(value='1 day') 1 day
                                option.fw-normal(value='10 days') 10 days
                                option.fw-normal(value='20 days') 20 days
                                option.fw-normal(value='30 days') 30 days
                    .buy-sell-switch.col-1.d-flex.flex-column.text-center.justify-content-center
                        input.btn-check(
                            type="radio"
                            id="buy-toggle"
                            name="buy-sell-switch"
                            autocomplete="off"
                        )
                        label.btn.px-2.border-0.mb-3(for='buy-toggle') i want to buy
                        input.btn-check(
                            type="radio"
                            id="sell-toggle"
                            name="buy-sell-switch"
                            autocomplete="off"
                        )
                        label.btn.px-2.border-0(for='sell-toggle') i want to sell
            .row.justify-content-center
                .col-md-3.mb-2.pt-5
                    button.btn.btn-violet.fs-6.fw-bold.text-light.text-uppercase.mt-5.w-100(
                        type='submit'
                        name='submit'
                    ) Submit
